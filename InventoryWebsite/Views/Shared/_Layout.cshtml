<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryWebsite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: bold;
            color: #0d6efd !important;
        }

        .navbar-nav .nav-link:hover {
            color: #0d6efd !important;
        }

        footer {
            background-color: #f1f1f1;
            padding: 15px 0;
        }

        .dropdown-menu > li > a:hover {
            background-color: #f0f0f0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">InventorySystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarCollapse">
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill"></i> Home
                            </a>
                        </li>

                        <!-- Product Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="productDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-box-seam"></i> Product
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="AddProduct">Add Product</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="ViewProduct">View Product</a></li>
                            </ul>
                        </li>

                        <!-- Location Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="locationDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-geo-alt-fill"></i> Location
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Location" asp-action="AddLocation">Add Location</a></li>
                                <li><a class="dropdown-item" asp-controller="Location" asp-action="ViewLocation">View Location</a></li>
                            </ul>
                        </li>

                        <!-- Category Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-folder"></i> Category
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="AddProductCategory">
                                    <i class="bi bi-folder-plus"></i> Add Category</a></li>
                                <li><a class="dropdown-item" asp-controller="Category" asp-action="Index">
                                    <i class="bi bi-folder2-open"></i> View Categories</a></li>
                            </ul>
                        </li>

                        <!-- Stock Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="stockDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-boxes"></i> Stock
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Stock" asp-action="AddProductStock">Add Stock</a></li>
                                <li><a class="dropdown-item" asp-controller="Stock" asp-action="ViewStock">View Stock</a></li>
                            </ul>
                        </li>     
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center mt-auto border-top">
        <div class="container text-muted">
            &copy; 2025 - InventoryWebsite |
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
