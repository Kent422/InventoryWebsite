@model List<InventoryWebsite.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">List of Categories</h2>
        <a asp-action="AddProductCategory" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Product Category
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Category Name</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryName</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Category" asp-action="EditCategory" asp-route-categoryID="@category.CategoryID" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-controller="Category" asp-action="DeleteCategory" asp-route-categoryID="@category.CategoryID" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>

                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center text-muted">No categories available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Optional: Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
