@model List<InventoryWebsite.Models.Category>

<h1>List of Categories</h1>
<table class="table">
    <thead>
        <tr>          
            <th>CategoryName</th>
            <th>Actions</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
               
                <td>
                    <a asp-action="Edit" asp-route-id="@category.CategoryID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.CategoryID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddProductCategory" class=" btn btn-primary">Add Product Category</a>