@model InventoryWebsite.Models.Category

@{
    ViewData["Title"] = "Add Product Category";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Add Product Category</h4>
        </div>

        <div class="card-body">
            <form asp-action="AddProductCategory" method="post">
                @Html.AntiForgeryToken()

                <!-- Validation Summary -->
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Category Name Input -->
                <div class="form-group mb-3">
                    <label asp-for="CategoryName" class="form-label">Category Name</label>
                    <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Register Category
                </button>

                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <!-- Optional Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
