@model InventoryWebsite.Models.Product

<h1>Update Product</h1>

<form asp-action="EditProduct" method="post">
    <input type="hidden" asp-for="ProductID" />

    <div class="form-group">
        <label class="control-label">Product Name</label>
        <input asp-for="ProductName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Capacity" class="control-label">Capacity</label>
        <input asp-for="Capacity" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="CategoryID" class="control-label">CategoryID</label>
        <input asp-for="CategoryID" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Edit</button>
</form>