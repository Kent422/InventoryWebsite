@model List<InventoryWebsite.Models.Stock>

@{
    ViewData["Title"] = "List of Product Stock";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">List of Product Stock</h2>
        <a asp-action="AddProductStock" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Product Stock
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Stock ID</th>
                    <th>Product ID</th>
                    <th>Quantity</th>
                    <th>Expiration Date</th>
                    <th>Supplier</th>
                    <th>Date Received</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var stock in Model)
                    {
                        <tr>
                            <td>@stock.StockID</td>
                            <td>@stock.ProductID</td>
                            <td>@stock.Quantity</td>
                            <td>@stock.ExpirationDate.ToString("yyyy-MM-dd")</td>
                            <td>@stock.Supplier</td>
                            <td>@stock.DateRecieved.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@stock.StockID" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@stock.StockID" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this stock?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">No product stock available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <!-- Optional: Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
