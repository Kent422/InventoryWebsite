@model InventoryWebsite.Models.StockLocationViewModel

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-box2-fill me-2"></i> Add Product Stock
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="AddProductStock" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <!-- Product Dropdown -->
                    <div class="col-md-6">
                        <label asp-for="Stock.ProductID" class="form-label">Product</label>
                        <select asp-for="Stock.ProductID" class="form-select" asp-items="ViewBag.ProductList">
                            <option value="">-- Select Product --</option>
                        </select>
                        <span asp-validation-for="Stock.ProductID" class="text-danger small"></span>
                    </div>

                    <!-- Location Dropdown -->
                    <div class="col-md-6">
                        <label asp-for="LocationID" class="form-label">Location</label>
                        <select asp-for="LocationID" class="form-select" asp-items="@(new SelectList(Model.LocationList, "LocationID", "LocationID"))">
                            <option value="">-- Select Location --</option>
                        </select>
                        <span asp-validation-for="LocationID" class="text-danger small"></span>
                    </div>

                    <!-- Quantity -->
                    <div class="col-md-6">
                        <label asp-for="Stock.Quantity" class="form-label">Quantity</label>
                        <input asp-for="Stock.Quantity" class="form-control" type="number" min="1" />
                        <span asp-validation-for="Stock.Quantity" class="text-danger small"></span>
                    </div>

                    <!-- Expiration Date -->
                    <div class="col-md-6">
                        <label asp-for="Stock.ExpirationDate" class="form-label">Expiration Date</label>
                        <input asp-for="Stock.ExpirationDate" class="form-control" type="date" />
                        <span asp-validation-for="Stock.ExpirationDate" class="text-danger small"></span>
                    </div>

                    <!-- Supplier -->
                    <div class="col-12">
                        <label asp-for="Stock.Supplier" class="form-label">Supplier Name</label>
                        <input asp-for="Stock.Supplier" class="form-control" />
                        <span asp-validation-for="Stock.Supplier" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-plus-circle me-1"></i> Add Stock
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}
