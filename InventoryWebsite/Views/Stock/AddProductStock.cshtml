@model InventoryWebsite.Models.StockLocationViewModel

<form asp-action="AddProductStock" method="post">
    @Html.AntiForgeryToken()

    <!-- Product Dropdown -->
    <div class="form-group">
        <label asp-for="Stock.ProductID" class="control-label">Product</label>
        <select asp-for="Stock.ProductID" class="form-control" asp-items="ViewBag.ProductList">
            <option value="">-- Select Product --</option>
        </select>
        <span asp-validation-for="Stock.ProductID" class="text-danger"></span>
    </div>

    <!-- Location Dropdown -->
    <div class="form-group">
        <label asp-for="LocationID" class="control-label">Location</label>
        <select asp-for="LocationID" class="form-control" asp-items="@(new SelectList(Model.LocationList, "LocationID", "LocationID"))">
            <option value="">-- Select Location --</option>
        </select>
        <span asp-validation-for="LocationID" class="text-danger"></span>
    </div>

    <!-- Quantity -->
    <div class="form-group">
        <label asp-for="Stock.Quantity" class="control-label">Quantity</label>
        <input asp-for="Stock.Quantity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Stock.Quantity" class="text-danger"></span>
    </div>

    <!-- Expiration Date -->
    <div class="form-group">
        <label asp-for="Stock.ExpirationDate" class="control-label">Expiration Date</label>
        <input asp-for="Stock.ExpirationDate" class="form-control" type="date" />
        <span asp-validation-for="Stock.ExpirationDate" class="text-danger"></span>
    </div>

    <!-- Supplier -->
    <div class="form-group">
        <label asp-for="Stock.Supplier" class="control-label">Supplier Name</label>
        <input asp-for="Stock.Supplier" class="form-control" />
        <span asp-validation-for="Stock.Supplier" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Stock</button>
</form>
