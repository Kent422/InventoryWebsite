@model List<InventoryWebsite.Models.Location>

@{
    ViewData["Title"] = "Location List";
}

<h2 class="my-4">📦 List of Locations</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th scope="col">Location ID</th>
            <th scope="col">Product ID</th>
            <th scope="col">Availability</th>
            <th scope="col">Capacity</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var location in Model)
            {
                <tr>
                    <td>@location.LocationID</td>
                    <td>@(location.ProductID ?? "")</td>                  
                    <td>@(location.Availability ?? "")</td>
                    <td>@(location.Capacity?.ToString() ?? "")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No locations found.</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-action="AddLocation" class="btn btn-primary">
        ➕ Add Location
    </a>
</div>
